@model IEnumerable<MvcMessageLogger.Models.User>

<h1>All Users</h1>

@foreach(var user in Model)
{
    <form method="get" action="/Users/@user.Id/Details">
        <button class="btn btn-primary">Login</button>
    </form>
    <form method="post" action="/Users/delete/@user.Id">
        <button type="submit" onclick="return confirm('Are you sure you want to delete @user.Username?')" class="btn btn-danger">Delete</button>
    </form>
    <p>Name:@user.Name, Username:@user.Username</p>
}


<a href='/Users/new'>Add a new User</a>