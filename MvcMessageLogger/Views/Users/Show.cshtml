@model User

<h1>Details for @Model.Name</h1>

<p>User: @Model.Name</p>
<p>Username: @Model.Username</p>
<form method="get" action="/Users/@Model.Id/Edit">
    <button>Edit</button>
</form>
<h3>Messages (@Model.Messages.Count)</h3>
@foreach(var message in Model.Messages)
{
    <form method="post" action="/Users/@Model.Id/Messages/Delete/@message.Id">
        <button type="submit" onclick="return confirm('Are you sure you want to delete @message.Id?')" class="btn btn-danger">Delete</button>
    </form>
    <form method="post" action="/Users/@Model.Id/Messages/@message.Id/Edit">
        <button type="submit">Edit</button>
    </form>
    ///Users/{userId:int}/Messages/{messageId}/Edit"
    <p>[@message.CreatedAt.ToLocalTime()] @message.Content</p>
}

<form method="get" action="/Users/@Model.Id/Messages/New">
    <button class="btn btn-primary">New Message</button>
</form>